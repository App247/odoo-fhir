<odoo>
    <data>

        <!-- Resource Views -->

        <record id="hc_resource_view_search" model="ir.ui.view">
            <field name="name">Resource Search</field>
            <field name="model">hc.resource</field>
            <field name="arch" type="xml">
                <search string="Resources">
                    <field name="identifier"/>
                </search>
            </field>
        </record>

        <record id="hc_resource_view_tree" model="ir.ui.view">
            <field name="name">Resource Tree</field>
            <field name="model">hc.resource</field>
            <field name="arch" type="xml">
                <tree string="Resources">
                    <field name="identifier"/>
                </tree>
            </field>
        </record>

        <record id="hc_resource_view_form" model="ir.ui.view">
            <field name="name">Resource Form</field>
            <field name="model">hc.resource</field>
            <field name="arch" type="xml">
                <form string="Resource">
                    <sheet>
                        <h1>
                            <field name="identifier" placeholder="ID"/>
                        </h1>
                        <group>
                            <group>
                                <field name="meta_id" string="Profile URI"/>
                                <field name="language_id"/>
                                <field name="implicit_rules"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="hc_resource_action"
                    name="HC Resources"
                    res_model="hc.resource"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <menuitem id="hc_base.menu_res"
            name="Resource"
            parent="hc_base.menu_datatype"
            action="hc_resource_action"
            groups="hc_base.group_hc_base_manager"
            sequence="56"/>

        <!-- Resource Meta Views -->

        <record id="hc_resource_meta_view_search" model="ir.ui.view">
            <field name="name">Resource Meta Search</field>
            <field name="model">hc.resource.meta</field>
            <field name="arch" type="xml">
                <search string="Resource Meta">
                </search>
            </field>
        </record>

        <record id="hc_resource_meta_view_tree" model="ir.ui.view">
            <field name="name">Resource Meta Tree</field>
            <field name="model">hc.resource.meta</field>
            <field name="arch" type="xml">
                <tree string="Resource Meta">
                </tree>
            </field>
        </record>

        <record id="hc_resource_meta_view_form" model="ir.ui.view">
            <field name="name">Resource Meta Form</field>
            <field name="model">hc.resource.meta</field>
            <field name="arch" type="xml">
                <form string="Resource Meta">
                    <sheet>
                        <h1>
                            <field name="identifier" placeholder="ID"/>
                        </h1>
                        <group>
                            <group>
                                <field name="version_id"/>
                                <field name="last_updated"/>
                                <field name="security_ids" widget="many2many_tags"/>
                                <field name="tag_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Profiles">
                                <field name="profile_ids" mode="tree">
                                    <tree>
                                        <field name="profile"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="profile"/>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="hc_resource_meta_action"
                    name="HC Resource Metas"
                    res_model="hc.resource.meta"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <!-- Domain Resource Views -->

        <record id="hc_domain_resource_view_search" model="ir.ui.view">
            <field name="name">Domain Resource Search</field>
            <field name="model">hc.domain.resource</field>
            <field name="arch" type="xml">
                <search string="Domain Resources">
                </search>
            </field>
        </record>

        <record id="hc_domain_resource_view_tree" model="ir.ui.view">
            <field name="name">Domain Resource Tree</field>
            <field name="model">hc.domain.resource</field>
            <field name="arch" type="xml">
                <tree string="Domain Resources">
                    <field name="text_id"/>
                </tree>
            </field>
        </record>

        <record id="hc_domain_resource_view_form" model="ir.ui.view">
            <field name="name">Domain Resource Form</field>
            <field name="model">hc.domain.resource</field>
            <field name="arch" type="xml">
                <form string="Domain Resource">
                    <sheet>
                        <h1>
                            <field name="text_id" default_focus="1" placeholder="Text"/>
                        </h1>
                        <group>
                            <group>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contained">
                                <field name="contained_ids" mode="tree">
                                    <tree>
                                        <field name="identifier"/>
                                        <field name="meta_id"/>
                                        <field name="implicit_rules"/>
                                        <field name="language_id"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Extensions">
                                <field name="extension_ids" mode="tree">
                                    <tree>
                                        <field name="url"/>
                                        <field name="value_name"/>
                                        <field name="value_type"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Modifier Extensions">
                                <field name="modifier_extension_ids" mode="tree">
                                    <tree>
                                        <field name="url"/>
                                        <field name="value_name"/>
                                        <field name="value_type"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <act_window id="hc_domain_resource_action"
                    name="HC Domain Resources"
                    res_model="hc.domain.resource"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <menuitem id="hc_base.menu_res_dom"
                  name="Domain Resources"
                  parent="hc_base.menu_res"
                  action="hc_domain_resource_action"
                  groups="hc_base.group_hc_base_manager"
                  sequence="10"/>

    </data>
</odoo>
