<odoo>
    <data>

        <!-- Meta Views -->                                     
                                        
        <record id="hc_meta_view_search" model="ir.ui.view">                                        
            <field name="name">Meta Search</field>                                  
            <field name="model">hc.meta</field>                                 
            <field name="arch" type="xml">                                  
                <search string="Meta">                             
                </search>                               
            </field>                                    
        </record>                                       
                                                
        <record id="hc_meta_view_tree" model="ir.ui.view">                                      
            <field name="name">Meta Tree</field>                                    
            <field name="model">hc.meta</field>                                 
            <field name="arch" type="xml">                                  
                <tree string="Meta">                               
                    <field name="profile"/>
                    <field name="version_id"/> 
                    <field name="last_updated"/>
                    <field name="security_ids" widget="many2many_tags"/>
                    <field name="tag_ids" widget="many2many_tags"/>                    
                </tree>                             
            </field>                                    
        </record>                                       
                                                
        <record id="hc_meta_view_form" model="ir.ui.view">                                      
            <field name="name">Meta Form</field>                                    
            <field name="model">hc.meta</field>                                 
            <field name="arch" type="xml">                                  
                <form string="Meta">                                
                    <sheet>                         
                        <h1>                        
                            <field name="profile" default_focus="1" placeholder="Profile URI"/>                   
                        </h1>                       
                        <group>                     
                            <group>
                                <field name="version_id"/> 
                                <field name="last_updated"/>
                                <field name="security_ids" widget="many2many_tags"/>
                                <field name="tag_ids" widget="many2many_tags"/>                      
                            </group>                    
                            <group>                 
                            </group>                    
                        </group>                                             
                    </sheet>                            
                </form>                             
            </field>                                    
        </record>                                       
                                                
        <act_window id="hc_meta_action"                                     
                    name="HC Meta"                         
                    res_model="hc.meta"                         
                    view_mode="tree,form"                           
                    domain=""                           
                    context=""                          
                    limit=""/>                          

    </data>
</odoo>