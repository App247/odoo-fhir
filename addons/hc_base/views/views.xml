<openerp>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hc_base.identifier_type_list">
      <field name="name">identifier.type.tree</field>
      <field name="model">hc.vs.identifier.type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="code"/>
          <field name="display"/>
          <field name="definition"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="hc_base.identifier_list">
      <field name="name">identifier.tree</field>
      <field name="model">hc.identifier</field>
      <field name="arch" type="xml">
        <tree>
          <field name="type_id"/>
          <field name="use"/>
<!--           <field name="country_id"/> -->
        </tree>
      </field>
    </record>
    
    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hc_base.identifier_type_window">
      <field name="name">HC Identifier Type</field>
      <field name="res_model">hc.vs.identifier.type</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="hc_base.identifier_window">
      <field name="name">HC Identifier</field>
      <field name="res_model">hc.identifier</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="hc_base.action_server">
      <field name="name">hc_base server</field>
      <field name="model_id" ref="model_hc_vs_identifier_type"/>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="FHIR" id="hc_base.menu_root" sequence="1"/>
    <menuitem name="Administrative" id="hc_base.administrative" sequence="2"/>    
    <menuitem name="Clinical" id="hc_base.clinical" sequence="3"/> 
    <menuitem name="Financial" id="hc_base.financial" sequence="4"/>
    <menuitem name="Infrastructure" id="hc_base.infrastructure" sequence="5"/>
    <menuitem name="ERP" id="hc_base.erp" sequence="5"/>

    <!-- menu categories -->
  
    <menuitem name="Menu 1" id="hc_base.menu_1" parent="hc_base.menu_root"/>
    <menuitem name="Identifiers" id="hc_base.menu_1" parent="hc_base.menu_root"/>
    <menuitem name="Menu 2" id="hc_base.menu_2" parent="hc_base.menu_root"/>
odoo
    <!-- actions -->
    
    <menuitem name="List" id="hc_base.menu_1_list" parent="hc_base.menu_1"
              action="hc_base.identifier_type_window"/>
    <menuitem name="Server to list" id="hc_base" parent="hc_base.menu_2"
              action="hc_base.action_server"/>
  
  </data>
</openerp>