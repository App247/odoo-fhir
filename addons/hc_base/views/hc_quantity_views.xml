<odoo>
    <data>

        <!-- Quantity Views -->

        <record id="hc_quantity_view_search" model="ir.ui.view">
            <field name="name">Quantity Search</field>
            <field name="model">hc.quantity</field>
            <field name="arch" type="xml">
                <search string="Quantities">
                </search>
            </field>
        </record>

        <record id="hc_quantity_view_tree" model="ir.ui.view">
            <field name="name">Quantity Tree</field>
            <field name="model">hc.quantity</field>
            <field name="arch" type="xml">
                <tree string="Quantities">
                </tree>
            </field>
        </record>

        <record id="hc_quantity_view_form" model="ir.ui.view">
            <field name="name">Quantity Form</field>
            <field name="model">hc.quantity</field>
            <field name="arch" type="xml">
                <form string="Quantity">
                    <sheet>
                        <h1>
                        </h1>
                        <group>
                            <group>
                                <field name="value"/>
                                <field name="comparator"/>
                                <field name="unit"/>
                                <field name="system"/>
                                <field name="code"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Simple Quantity Views -->

        <record id="hc_simple_quantity_view_search" model="ir.ui.view">
            <field name="name">Simple Quantity Search</field>
            <field name="model">hc.simple.quantity</field>
            <field name="arch" type="xml">
                <search string="Simple Quantities">
                </search>
            </field>
        </record>

        <record id="hc_simple_quantity_view_tree" model="ir.ui.view">
            <field name="name">Simple Quantity Tree</field>
            <field name="model">hc.simple.quantity</field>
            <field name="arch" type="xml">
                <tree string="Simple Quantities">
                </tree>
            </field>
        </record>

        <record id="hc_simple_quantity_view_form" model="ir.ui.view">
            <field name="name">Simple Quantity Form</field>
            <field name="model">hc.simple.quantity</field>
            <field name="arch" type="xml">
                <form string="Simple Quantity">
                    <sheet>
                        <h1>
                        </h1>
                        <group>
                            <group>
                                <field name="value"/>
                                <field name="unit"/>
                                <field name="system"/>
                                <field name="code"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
