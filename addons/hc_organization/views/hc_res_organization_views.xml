<openerp>
    <data>

        <!-- Organization Views -->

        <record id="hc_res_organization_view_search" model="ir.ui.view">
            <field name="name">Organization Search</field>
            <field name="model">hc.res.organization</field>
            <field name="arch" type="xml">
                <search string="Organizations">
                </search>
            </field>
        </record>

        <record id="hc_res_organization_view_tree" model="ir.ui.view">
            <field name="name">Organization Tree</field>
            <field name="model">hc.res.organization</field>
            <field name="arch" type="xml">
                <tree string="Organizations">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="hc_res_organization_view_form" model="ir.ui.view">
            <field name="name">Organization Form</field>
            <field name="model">hc.res.organization</field>
            <field name="arch" type="xml">
                <form string="Organization">
                    <sheet>
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                        <group>
                            <group>
                                <field name="partner_id"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <notebook>
                            <page string="Contacts">
                                <field name="contact_ids" mode="tree">
                                    <tree>
                                        <field name="name_id"/>
                                        <field name="purpose_id"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="name_id"/>
                                                    <field name="purpose_id"/>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                        <notebook>
                                            <page string="Telecom">
                                                <field name="telecom_ids" mode="tree">
                                                    <tree default_order="is_preferred,rank">
                                                        <field name="is_preferred"/>
                                                        <field name="rank"/>
                                                        <field name="use"/>
                                                        <field name="telecom_id"/>
                                                        <field name="start_date"/>
                                                        <field name="end_date"/>
                                                    </tree>
                                                    <form>
                                                        <sheet>
                                                            <h1>
                                                                <field name="telecom_id"/>
                                                            </h1>
                                                            <field name="use" widget="radio" options="{'horizontal': true}"/>
                                                            <group>
                                                                <group>
                                                                    <field name="rank"/>
                                                                    <field name="is_preferred"/>
                                                                    <field name="is_active"/>
                                                                    <field name="start_date" placeholder="Valid From"/>
                                                                    <field name="end_date" placeholder="Valid To"/>
                                                                </group>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                            <page string="Addresses">
                                                <field name="address_ids" mode="tree">
                                                    <tree default_order="is_preferred">
                                                        <field name="is_preferred"/>
                                                        <field name="use"/>
                                                        <field name="line1"/>
                                                        <field name="line2"/>
                                                        <field name="city_id"/>
                                                        <field name="postal_code_id"/>
                                                        <field name="country_id"/>
                                                        <field name="start_date"/>
                                                        <field name="end_date"/>
                                                    </tree>
                                                    <form>
                                                        <sheet>
                                                            <h1>
                                                                <field name="address_id" class="oe_no_button"/>
                                                            </h1>
                                                            <field name="use" widget="radio" options="{'horizontal': true}"/>
                                                            <group>
                                                                <group>
                                                                    <field name="is_preferred"/>
                                                                    <field name="is_active"/>
                                                                    <field name="start_date" placeholder="Valid From"/>
                                                                    <field name="end_date" placeholder="Valid To"/>
                                                                </group>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </form>
                                </field>
                            </page>
                            <page string="Identifiers">
                                <field name="identifier_ids" mode="tree">
                                    <tree default_order="is_preferred">
                                        <field name="is_preferred"/>
                                        <field name="name"/>
                                        <field name="value"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <h1>
                                                <field name="name" placeholder="Identifier"/>
                                            </h1>
                                            <group col="4" colspan="4">
                                                <group>
                                                    <field name="value"/>
                                                    <field name="is_preferred"/>
                                                    <field name="is_active"/>
                                                </group>
                                                <group>
                                                    <field name="start_date" placeholder="Valid From"/>
                                                    <field name="end_date" placeholder="Valid To"/>
                                               </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Aliases">
                                <field name="alias_ids" mode="tree">
                                    <tree>
                                        <field name="alias" editable="bottom"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Telecom">
                                <field name="telecom_ids" mode="tree">
                                    <tree default_order="is_preferred,rank">
                                        <field name="is_preferred"/>
                                        <field name="rank"/>
                                        <field name="use"/>
                                        <field name="telecom_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <h1>
                                                <field name="telecom_id"/>
                                            </h1>
                                            <field name="use" widget="radio" options="{'horizontal': true}"/>
                                            <group>
                                                <group>
                                                    <field name="rank"/>
                                                    <field name="is_preferred"/>
                                                    <field name="is_active"/>
                                                    <field name="start_date" placeholder="Valid From"/>
                                                    <field name="end_date" placeholder="Valid To"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Addresses">
                                <field name="address_ids" mode="tree">
                                    <tree default_order="is_preferred">
                                        <field name="is_preferred"/>
                                        <field name="use"/>
                                        <field name="line1"/>
                                        <field name="line2"/>
                                        <field name="city_id"/>
                                        <field name="postal_code_id"/>
                                        <field name="country_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <h1>
                                                <field name="address_id" class="oe_no_button"/>
                                            </h1>
                                            <field name="use" widget="radio" options="{'horizontal': true}"/>
                                            <group>
                                                <group>
                                                    <field name="is_preferred"/>
                                                    <field name="is_active"/>
                                                    <field name="start_date" placeholder="Valid From"/>
                                                    <field name="end_date" placeholder="Valid To"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Endpoints">
                                <field name="endpoint_ids" mode="tree">
                                    <tree>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Locations">
                                <field name="location_ids" mode="tree">
                                    <tree>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <act_window id="hc_res_organization_action"
                    name="HC Organizations"
                    res_model="hc.res.organization"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <menuitem id="hc_organization.menu_org"
                  name="Organizations"
                  web_icon="hc_organization,static/description/icon.png"
                  parent="hc_base.menu_entity"
                  action="hc_res_organization_action"
                  groups="hc_base.group_hc_base_manager"
                  sequence="10"/>

        <!-- External Referece -->

        <record id="hc_vs_identifier_code_view_form_inherited" model="ir.ui.view">
            <field name="name">Identifier Code Form Inherit</field>
            <field name="model">hc.vs.identifier.code</field>
            <field name="inherit_id" ref="hc_base.hc_vs_identifier_code_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//group//field[@name='type_id']" position="after">
                    <field name="assigner_id"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
