<openerp>
    <data>
      
        <record id="hc_base.hc_res_person_view_search" model="ir.ui.view">        
            <field name="name">hc_res_person_view_search</field>      
            <field name="model">hc.res.person</field>     
            <field name="arch" type="xml">      
                <search string="Persons">   
                    <field name="name_id"/>
                </search>   
            </field>      
        </record>       
                
        <record id="hc_base.hc_res_person_view_tree" model="ir.ui.view">        
            <field name="name">hc_res_person_view_tree</field>      
            <field name="model">hc.res.person</field>     
            <field name="arch" type="xml">      
                <tree string="Persons">   
                    <field name="name_id"/>  
                    <field name="gender"/>  
                    <field name="birthdate"/> 
                </tree>   
            </field>      
        </record>       

        <record id="hc_base.hc_res_person_view_form" model="ir.ui.view">                    
            <field name="name">hc_res_person_view_form</field>                  
            <field name="model">hc.res.person</field>                 
            <field name="arch" type="xml">                  
                <form string="Person">                
                    <sheet>
                        <field name="image" widget="image" class="oe_left oe_avatar" options="{'preview_image': 'image_medium', 'size': [90, 90]}"/>         
                        <div class="oe_title oe_left">           
                            <h1>          
                                <field name="name_id" default_focus="1" placeholder="Full Name"/>       
                            </h1>         
                        </div>            
                        <div name="buttons" class="oe_right oe_button_box"></div>           
                        <group>           
                            <group>         
                                <field name="gender"/>        
                                <field name="birthdate"/>        
                            </group>          
                            <group>         
                            </group>          
                        </group>            
                        <notebook colspan="4">           
                            <page string="Names"/>         
                            <page string="Identifiers"/>         
                            <page string="Addresses" autofocus="autofocus">         
                                <field name="address_ids" mode="tree">
                                    <tree>      
                                        <field name="use" widget="radio"/>    
                                        <field name="is_preferred"/>    
                                        <field name="line1"/>   
                                        <field name="line2"/>   
                                        <field name="city_id"/>   
                                        <field name="postal_code_id"/>    
                                        <field name="country_id"/>
                                        <field name="start_date"/>    
                                        <field name="end_date"/>
                                    </tree>     
                                    <form>      
                                        <sheet>   
                                            <group col="4" colspan="4">  
                                                <field name="use" widget="radio" colspan="4"/>
                                                <field name="address_id" class="oe_no_button"/>
                                                <field name="is_preferred"/>
                                                <field name="is_active"/>
                                                <field name="start_date" placeholder="Valid From"/>
                                                <field name="end_date" placeholder="Valid To"/>
                                            </group>  
                                        </sheet>    
                                    </form>     
                                </field>        
                            </page>         
                            <page string="Telecom"/>          
                            <page string="Media"/>          
                            <page string="Languages"/>          
                            <page string="Related Persons"/>          
                            <page string="Contacts"/>         
                            <page string="Marital Status"/>         
                        </notebook>           
                    </sheet>              
                </form>               
            </field>                  
        </record>                   

        <record id="hc_person.hc_res_person_action" model="ir.actions.act_window">  
            <field name="name">Person</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hc.res.person</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record> 

        <menuitem name="Person" id="hc_person.menu_pers" parent="hc_base.menu_id_ent" action="hc_person.hc_res_person_action" sequence="3"/>

    </data>
</openerp>