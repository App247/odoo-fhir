                        </notebook>                     
                    </sheet>                            
                </form>                             
            </field>                                    
        </record>
   
    
        <act_window id="hc_res_medication_statement_action" 
                    name="HC Medication Statements"
                    res_model="hc.res.medication.statement"
                    view_mode="tree,form"
                    domain=""
                    context=""
