<openerp>
    <data>
    
        <!-- Family Member History Views -->            
                    
        <record id="hc_res_family_member_history_view_search" model="ir.ui.view">           
            <field name="name">Family Member History Search</field>     
            <field name="model">hc.res.family.member.history</field>        
            <field name="arch" type="xml">      
                <search string="Family Member Histories">
                    <field name="record_name"/>    
                </search>   
            </field>        
        </record>           
                    
        <record id="hc_res_family_member_history_view_tree" model="ir.ui.view">         
            <field name="name">Family Member History Tree</field>       
            <field name="model">hc.res.family.member.history</field>        
            <field name="arch" type="xml">      
                <tree string="Family Member Histories">  
                    <field name="record_name"/>
                </tree> 
            </field>        
        </record>           

        <record id="hc_res_family_member_history_view_form" model="ir.ui.view">                                     
            <field name="name">Family Member History Form</field>                                   
            <field name="model">hc.res.family.member.history</field>                                    
            <field name="arch" type="xml">                                  
                <form string="Family Member History">                               
                    <sheet>                         
                        <h1>                    
                            <field name="record_name" default_focus="1" placeholder="Record Name"/>             
                        </h1>                   
                        <group>                     
                            <group string="Entity">
                            <field name="patient_id"/>
                            <field name="family_member_name"/>
                            <field name="family_member_name_type" class="oe_edit_only"/>
                            <field name="family_member_name_string" class="oe_edit_only" attrs="{'invisible': [('family_member_name_type','!=','string')], 'required': [('family_member_name_type', '=', 'string')]}"/>
                            <field name="family_member_name_related_person_id" class="oe_edit_only" attrs="{'invisible': [('family_member_name_type','!=','related_person')], 'required': [('family_member_name_type', '=', 'related_person')]}"/>
                            <field name="relationship_id" attrs="{'invisible': [('family_member_name_type','!=','string')]}"/>
                            <field name="gender" attrs="{'invisible': [('family_member_name_type','!=','string')]}"/>
                            <field name="date"/>
                            </group>
                            <group string="Status">
                                <field name="status"/>
                                <field name="data_absent_reason"/>
                            </group>                    
                            <group string="Timeline" attrs="{'invisible': [('family_member_name_type','!=','string')]}">
                                <field name="born_name"/>
                                <field name="born_type" class="oe_edit_only"/>
                                <field name="earliest_born_date" class="oe_edit_only" attrs="{'invisible': [('born_type','!=','period')]}"/>
                                <field name="latest_born_date" class="oe_edit_only" attrs="{'invisible': [('born_type','!=','period')]}"/>
                                <field name="born_date" class="oe_edit_only" attrs="{'invisible': [('born_type','!=','date')]}"/>
                                <field name="born_string" class="oe_edit_only" attrs="{'invisible': [('born_type','!=','string')]}"/>
                                <field name="age_name"/>
                                <field name="age_type" class="oe_edit_only"/>
                                <field name="age" class="oe_edit_only" attrs="{'invisible': [('age_type','!=','age')]}"/>
                                <field name="age_uom_id" class="oe_edit_only" attrs="{'invisible': [('age_type','!=','age')]}"/>
                                <field name="age_range_low" class="oe_edit_only" attrs="{'invisible': [('age_type','!=','range')]}"/>
                                <field name="age_range_high" class="oe_edit_only" attrs="{'invisible': [('age_type','!=','range')]}"/>
                                <field name="age_string" class="oe_edit_only" attrs="{'invisible': [('age_type','!=','string')]}"/>
                                <field name="is_deceased"/>
                                <field name="deceased_age_name" attrs="{'invisible': [('is_deceased','!=',True)]}"/>
                                <field name="deceased_age_type" class="oe_edit_only" attrs="{'invisible': [('is_deceased','!=',True)]}"/>
                                <field name="deceased_age" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','age')]}"/>
                                <field name="deceased_age_uom_id" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','age')]}"/>
                                <field name="deceased_age_range_low" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','range')]}"/>
                                <field name="deceased_age_range_high" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','range')]}"/>
                                <field name="deceased_age_string" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','string')]}" placeholder="e.g., Summer 1967"/>
                                <field name="deceased_age_date" class="oe_edit_only" attrs="{'invisible': ['|', ('is_deceased','!=',True), ('deceased_age_type','!=','date')]}"/>                 
                            </group>                    
                        </group>                        
                        <notebook>                      
                            <page string="Conditions">                 
                                <field name="condition_ids" mode="tree">               
                                    <tree>
                                        <field name="code_id"/>
                                        <field name="outcome"/>
                                        <field name="onset_name"/>
                                        <field name="onset_type"/>          
                                    </tree>         
                                    <form>          
                                        <sheet>     
                                            <group> 
                                                <group>
                                                    <field name="code_id"/>
                                                    <field name="outcome"/>
                                                </group>
                                                <group>
                                                    <field name="onset_name"/>
                                                    <field name="onset_type" class="oe_edit_only"/>
                                                    <field name="onset_age" class="oe_edit_only" attrs="{'invisible': [('onset_type','!=','age')]}"/>
                                                    <field name="onset_age_uom_id" class="oe_edit_only" attrs="{'invisible': [('onset_type','!=','age')]}"/>
                                                    <field name="onset_range_low" class="oe_edit_only" attrs="{'invisible': [('onset_type','!=','range')]}"/>
                                                    <field name="onset_range_high" class="oe_edit_only" attrs="{'invisible': [('onset_type','!=','range')]}"/>
                                                    <field name="onset_string" class="oe_edit_only" attrs="{'invisible': [('onset_type','!=','string')]}"/>
                                                </group>
                                            </group>
                                            <notebook>                      
                                                <page string="Notes">                           
                                                    <field name="note_ids" mode="tree">                     
                                                        <tree>                  
                                                            <field name="text"/>                
                                                            <field name="author_type"/>             
                                                            <field name="recorded_date"/>               
                                                        </tree>                 
                                                        <form>                  
                                                            <sheet>             
                                                                <div>           
                                                                    <field name="text" placeholder="Annotation"/>       
                                                                </div>          
                                                                <group>         
                                                                    <group>     
                                                                        <field name="author_name"/>
                                                                        <field name="author_type" class="oe_edit_only"/>
                                                                        <field name="author_string" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','string')]}"/>
                                                                        <field name="author_practitioner_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','practitioner')]}"/>
                                                                        <field name="author_patient_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','patient')]}"/>
                                                                        <field name="author_related_person_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','related_person')]}"/> 
                                                                    </group>        
                                                                    <group>     
                                                                        <field name="recorded_date"/>   
                                                                    </group>        
                                                                </group>            
                                                            </sheet>                
                                                        </form>             
                                                    </field>                    
                                                </page>                         
                                            </notebook>                     
                                        </sheet>        
                                    </form>     
                                </field>            
                            </page>
                            <page string="Identifiers">                     
                                <field name="identifier_ids" mode="tree">                   
                                    <tree>              
                                        <field name="is_preferred"/>            
                                        <field name="name"/>            
                                        <field name="value"/>           
                                        <field name="type_id"/>         
                                    </tree>             
                                    <form>              
                                        <sheet>         
                                            <div class="oe_title oe_left">      
                                                <h1>    
                                                    <field name="name" placeholder="Identifier"/>
                                                </h1>   
                                            </div>      
                                            <group>     
                                                <group> 
                                                    <field name="value"/>
                                                    <field name="type_id"/>
                                                    <field name="is_preferred"/>
                                                    <field name="is_active"/>
                                                </group>    
                                                <group> 
                                                    <field name="start_date" placeholder="Valid From"/>
                                                    <field name="end_date" placeholder="Valid To"/>
                                                </group>    
                                            </group>        
                                        </sheet>            
                                    </form>             
                                </field>                    
                            </page>                     
                            <page string="Definitions">                 
                                <field name="definition_ids" mode="tree">               
                                    <tree>
                                        <field name="definition_name"/>
                                        <field name="definition_type"/>          
                                    </tree>         
                                    <form>          
                                        <sheet>
                                        <h1>
                                            <field name="definition_name" placeholder="Definition"/>
                                        </h1>     
                                            <group> 
                                                <group>  
                                                    <field name="definition_type" class="oe_edit_only"/>
                                                    <field name="definition_plan_definition_id" class="oe_edit_only" attrs="{'invisible': [('definition_type','!=','plan_definition')]}"/>
                                                    <field name="definition_questionnaire_id" class="oe_edit_only" attrs="{'invisible': [('definition_type','!=','questionnaire')]}"/>
                                                </group>
                                                <group>
                                                </group>
                                            </group>    
                                        </sheet>        
                                    </form>     
                                </field>            
                            </page>
                            <page string="Reason References">                 
                                <field name="reason_reference_ids" mode="tree">               
                                    <tree>
                                        <field name="reason_reference_name"/>
                                        <field name="reason_reference_type"/>      
                                    </tree>         
                                    <form>          
                                        <sheet>
                                        <h1>
                                            <field name="reason_reference_name" placeholder="Name"/>
                                        </h1>     
                                            <group> 
                                                <group>
                                                    <field name="reason_reference_type" class="oe_edit_only"/>
                                                    <field name="reason_reference_condition_id" class="oe_edit_only" attrs="{'invisible': [('reason_reference_type','!=','condition')]}"/>
                                                    <field name="reason_reference_observation_id" class="oe_edit_only" attrs="{'invisible': [('reason_reference_type','!=','observation')]}"/>
                                                    <field name="reason_reference_allergy_intolerance_id" class="oe_edit_only" attrs="{'invisible': [('reason_reference_type','!=','allergy_intolerance')]}"/>
                                                    <field name="reason_reference_questionnaire_response_id" class="oe_edit_only" attrs="{'invisible': [('reason_reference_type','!=','questionnaire_response')]}"/>
                                                </group>
                                                <group>
                                                </group>
                                            </group>    
                                        </sheet>        
                                    </form>     
                                </field>            
                            </page>
                            <page string="Notes">                       
                                <field name="note_ids" mode="tree">                 
                                    <tree>              
                                        <field name="text"/>            
                                        <field name="author_type"/>         
                                        <field name="recorded_date"/>           
                                    </tree>             
                                    <form>              
                                        <sheet>         
                                            <div>       
                                                <field name="text" placeholder="Annotation"/>   
                                            </div>      
                                            <group>     
                                                <group>
                                                    <field name="author_name"/>
                                                    <field name="author_type" class="oe_edit_only"/>
                                                    <field name="author_string" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','string')]}"/>
                                                    <field name="author_practitioner_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','practitioner')]}"/>
                                                    <field name="author_patient_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','patient')]}"/>
                                                    <field name="author_related_person_id" class="oe_edit_only" attrs="{'invisible': [('author_type','!=','related_person')]}"/>
                                                </group>    
                                                <group> 
                                                    <field name="recorded_date"/>
                                                </group>    
                                            </group>        
                                        </sheet>            
                                    </form>             
                                </field>                    
                            </page>                     
                        </notebook>                     
                    </sheet>                            
                </form>                             
            </field>                                    
        </record>                                       

        <!-- Family Member History Action and Menu -->  
    
        <act_window id="hc_res_family_member_history_action"    
                    name="HC Family Member Histories"
                    res_model="hc.res.family.member.history"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>
                
        <menuitem id="hc_family_member_history.menu_fam_hist" 
                  name="Family Member Histories"
                  web_icon="hc_family_member_history,static/description/icon.png"   
                  parent="hc_base.menu_clinic_gen" 
                  action="hc_res_family_member_history_action" 
                  groups="hc_base.group_hc_base_manager" 
                  sequence="40"/>

    </data>
</openerp>