<openerp>
    <data>

        <!-- Care Plan Views -->

        <record id="hc_res_care_plan_view_search" model="ir.ui.view">         
            <field name="name">Care Plan Search</field>       
            <field name="model">hc.res.care.plan</field>      
            <field name="arch" type="xml">      
                <search string="Care Plans">
                    <field name="title"/>  
                </search>   
            </field>        
        </record>           
                    
        <record id="hc_res_care_plan_view_tree" model="ir.ui.view">           
            <field name="name">Care Plan Tree</field>     
            <field name="model">hc.res.care.plan</field>      
            <field name="arch" type="xml">      
                <tree string="Care Plans">    
                    <field name="title"/>
                </tree> 
            </field>        
        </record>           
    
        <record id="hc_res_care_plan_view_form" model="ir.ui.view">                                     
            <field name="name">Care Plan Form</field>                                   
            <field name="model">hc.res.care.plan</field>                                    
            <field name="arch" type="xml">                                  
                <form string="Care Plan">                               
                    <sheet>                         
                        <h1>                    
                            <field name="title" default_focus="1" placeholder="Title"/>             
                        </h1>                   
                        <group>                     
                            <group>                 
                            </group>                    
                            <group>                 
                            </group>                    
                        </group>                        
                        <notebook>                      
                            <page string="Identifiers">                 
                                <field name="identifier_ids" mode="tree">               
                                    <tree>          
                                    </tree>         
                                    <form>          
                                        <sheet>     
                                            <group> 
                                                <group>
                                                </group>
                                                <group>
                                                </group>
                                            </group>    
                                        </sheet>        
                                    </form>         
                                </field>                
                            </page>                 
                        </notebook>                     
                    </sheet>                            
                </form>                             
            </field>                                    
        </record>

        <act_window id="hc_res_care_plan_action"    
                    name="HC Care Plans"
                    res_model="hc.res.care.plan"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <menuitem id="hc_care_plan.menu_care_plan" 
                  name="Care Plans"
                  web_icon="hc_care_plan,static/description/icon.png" 
                  parent="hc_base.menu_clinic_care" 
                  action="hc_res_care_plan_action" 
                  groups="hc_base.group_hc_base_manager" 
                  sequence="10"/>
        
        <record id="hc_res_procedure_view_form_inherited" model="ir.ui.view">
            <field name="name">Procedure Form Inherit</field>
            <field name="model">hc.res.procedure</field>
            <field name="inherit_id" ref="hc_procedure.hc_res_procedure_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='based_on_ids']//form//group//field[@name='based_on_type']" position="after">
                    <field name="based_on_care_plan_id" class="oe_edit_only" attrs="{'invisible': [('based_on_type','!=','care_plan')], 'required': [('based_on_type','=','care_plan')]}"/>
                </xpath>
                <!-- <xpath expr="//field[@name='report_ids']" position="after">
                    <tree>                      
                        <field name="report_id"/>
                    </tree>                     
                    <form>                     
                        <sheet>                              
                            <h1>            
                                <field name="report_id" placeholder="Diagnostic Report"/>        
                            </h1>                    
                            <group>             
                                <group>
                                </group>           
                            </group>                
                        </sheet>                    
                    </form> 
                </xpath> -->
            </field>
        </record>
    
    </data>
</openerp>
