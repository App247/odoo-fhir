<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- Allergy Intolerance Views -->          
                
        <record id="hc_res_allergy_intolerance_view_search" model="ir.ui.view">         
            <field name="name">Allergy Intolerance Search</field>       
            <field name="model">hc.res.allergy.intolerance</field>      
            <field name="arch" type="xml">      
                <search string="Allergy Intolerances">
                    <field name="allergy_intolerance"/>
                    <field name="asserted_date"/>
                    <field name="asserter_name"/>
                    <field name="asserter_type"/>
                    <field name="category_ids" widget="many2one"/>
                    <field name="clinical_status"/>
                    <field name="code_id"/>
                    <field name="criticality"/>
                    <field name="identifier_ids" widget="many2one"/>
                    <field name="last_occurence"/>
                    <field name="note_ids" widget="many2one"/>
                    <field name="onset_name"/>
                    <field name="onset_type"/>
                    <field name="patient_id"/>
                    <field name="recorder_name"/>
                    <field name="recorder_type"/>
                    <field name="type"/>
                    <field name="verification_status"/>
                    <group string="Group By" >  
                        <filter name="group_by_asserter" string="Asserter" context="{'group_by': 'asserter_name'}" />
                    </group>    
                </search>   
            </field>        
        </record>           
   
        <record id="hc_res_allergy_intolerance_view_tree" model="ir.ui.view">            
            <field name="name">Allergy Intolerance Tree</field>     
            <field name="model">hc.res.allergy.intolerance</field>      
            <field name="arch" type="xml">      
                <tree string="Allergy Intolerances">
                    <field name="patient_id"/>
                    <field name="allergy_intolerance"/>
                    <field name="asserted_date"/>
                    <field name="clinical_status"/>
                    <field name="verification_status"/>
                </tree> 
            </field>        
        </record>

        <record id="hc_res_allergy_intolerance_view_form" model="ir.ui.view">                                       
            <field name="name">Allergy Intolerance Form</field>                                 
            <field name="model">hc.res.allergy.intolerance</field>                                  
            <field name="arch" type="xml">                                  
                <form string="Allergy Intolerance">                             
                    <sheet>                                
                        <div class="oe_title oe_left">                      
                            <h1>                    
                                <field name="patient_id" default_focus="1" placeholder="Patient"/>              
                            </h1>                   
                        </div>                      
                        <div name="buttons" class="oe_right oe_button_box"></div>                       
                        <group>                     
                            <group>                 
                                <field name="code_id"/>
                                <field name="allergy_intolerance"/>
                                <field name="type" widget="radio"/>
                                <field name="criticality"/>
                                <field name="onset_type"/>
                                <field name="onset_name"/>
                                <field name="onset_date_time" attrs="{'invisible': [('onset_type','!=','date_time')]}"/>
                                <field name="onset_age" attrs="{'invisible': [('onset_type','!=','age')]}"/>
                                <field name="onset_age_uom_id" attrs="{'invisible': [('onset_type','!=','age')]}"/>
                                <field name="onset_start_date" attrs="{'invisible': [('onset_type','!=','period')]}"/>
                                <field name="onset_end_date" attrs="{'invisible': [('onset_type','!=','period')]}"/>
                                <field name="onset_range_low" attrs="{'invisible': [('onset_type','!=','range')]}"/>
                                <field name="onset_range_high" attrs="{'invisible': [('onset_type','!=','range')]}"/>
                                <field name="onset_string" attrs="{'invisible': [('onset_type','!=','string')]}"/>                
                            </group>                    
                            <group>                             
                                <field name="asserted_date"/>
                                <field name="last_occurence"/>
                                <field name="clinical_status"/>
                                <field name="verification_status"/>
                                <field name="recorder_type"/>
                                <field name="recorder_name"/>
                                <field name="recorder_practitioner_id" attrs="{'invisible': [('recorder_type','!=','practitioner')]}"/>
                                <field name="recorder_patient_id" attrs="{'invisible': [('recorder_type','!=','patient')]}"/>
                                <field name="asserter_type"/>
                                <field name="asserter_name"/>
                                <field name="asserter_patient_id" attrs="{'invisible': [('asserter_type','!=','patient')]}"/>
                                <field name="asserter_related_person_id" attrs="{'invisible': [('asserter_type','!=','related_person')]}"/>
                                <field name="asserter_practitioner_id" attrs="{'invisible': [('asserter_type','!=','practitioner')]}"/>
                            </group>                    
                        </group>                        
                        <notebook colspan="4">                                        
                            <page string="Reactions">                   
                                <field name="reaction_ids" mode="tree">             
                                    <tree>              
                                        <field name="description"/>      
                                        <field name="onset"/>       
                                        <field name="duration"/>
                                        <field name="duration_uom_id"/>       
                                        <field name="severity"/>     
                                    </tree>         
                                    <form>          
                                        <sheet>
                                            <div class="oe_title oe_left">                      
                                                <h1>                    
                                                    <field name="substance_id" readonly="1"/>              
                                                </h1>
                                            </div>     
                                            <group col="4" colspan="4">
                                                <group>   
                                                    <field name="description"/>      
                                                    <field name="onset"/>       
                                                    <field name="duration"/>
                                                    <field name="duration_uom_id"/>        
                                                </group>
                                                <group>
                                                    <field name="severity"/>
                                                    <field name="certainty"/>
                                                    <field name="manifestation_ids" widget="many2many_tags"/>          
                                                    <field name="exposure_route_id"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Notes">
                                                    <field name="note_ids" mode="tree">
                                                        <tree>
                                                            <field name="text"/>
                                                            <field name="author_type"/>
                                                            <field name="recorded_date"/>
                                                        </tree>
                                                        <form>
                                                            <sheet>
                                                                <div class="oe_left">
                                                                    <field name="text" placeholder="Annotation"/>
                                                                </div>
                                                                <group>
                                                                    <group>
                                                                        <field name="author_type"/>
                                                                    </group>
                                                                    <group>
                                                                        <field name="recorded_date"/>
                                                                    </group>
                                                                </group>
                                                            </sheet>
                                                        </form>
                                                    </field>
                                                </page>
                                            </notebook>    
                                        </sheet>        
                                    </form>         
                                </field>                
                            </page>
                            <!-- <page string="Identifiers"/> -->
                            <page string="Identifiers">
                                <field name="identifier_ids" mode="tree">
                                    <tree>
                                        <field name="is_preferred"/>
                                        <field name="name"/>
                                        <field name="value"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <div>
                                                <h1>
                                                    <field name="name" placeholder="Identifier"/>
                                                </h1>
                                            </div>
                                            <group col="4" colspan="4">
                                                <group>
                                                    <field name="value"/>
                                                    <field name="is_preferred"/>
                                                    <field name="is_active"/>
                                                </group>
                                                <group>
                                                    <field name="start_date" placeholder="Valid From"/>
                                                    <field name="end_date" placeholder="Valid To"/>
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>                    
                            <page string="Categories">
                                <field name="category_ids" mode="tree" editable="top">
                                    <tree>
                                        <field name="category"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Annotations">
                                <field name="note_ids" mode="tree">
                                    <tree>
                                        <field name="text"/>    
                                        <field name="author_name"/>
                                        <field name="author_type"/>       
                                        <field name="recorded_date"/> 
                                    </tree>
                                    <form>
                                        <sheet>
                                            <div class="oe_title oe_left">          
                                                <h1>        
                                                    <field name="text" default_focus="1" placeholder="Annotation"/>
                                                </h1>     
                                            </div>          
                                            <group>         
                                                <group>
                                                    <field name="author_type"/>
                                                    <field name="author_string" attrs="{'invisible': [('author_type','!=','string')]}"/>
                                                    <field name="author_patient_id" attrs="{'invisible': [('author_type','!=','patient')]}"/>
                                                    <field name="author_practitioner_id" attrs="{'invisible': [('author_type','!=','practitioner')]}"/>
                                                    <field name="author_related_person_id" attrs="{'invisible': [('author_type','!=','related_person')]}"/>          
                                                    <field name="recorded_date"/>
                                                </group>
                                                <group>       
                                                </group>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>                                       
                        </notebook>                     
                    </sheet>                            
                </form>                             
            </field>                                    
        </record>                                       


        <!-- Attachment Type Action and Menu -->  
      
    <!--     <record id="hc_res_allergy_intolerance_action" model="ir.actions.act_window"> 
            <field name="name">HC Allergy Intolerances</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hc.res.allergy.intolerance</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>  -->

        <!-- Allergy Intolerance Action and Menu -->    
        
        <act_window id="hc_res_allergy_intolerance_action"  
                    name="HC Allergy Intolerances"
                    res_model="hc.res.allergy.intolerance"
                    view_mode="tree,form"
                    domain=""
                    context=""
                    limit=""/>

        <menuitem id="hc_allergy_intolerance.menu_allergy" 
                  name="Allergy Intolerances" 
                  parent="hc_base.menu_clinic_gen" 
                  action="hc_res_allergy_intolerance_action"
                  groups="hc_base.group_hc_base_manager"
                  sequence="10"/>
        
    </data>
</openerp>
